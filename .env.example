# === Wallet ===
PM_PRIVATE_KEY=0x_your_private_key_here
PM_WALLET_ADDRESS=0x_your_wallet_address_here

# === API Keys ===
PM_SYNTH_API_KEY=sk_your_synth_key_here

# === Mode ===
PM_DRY_RUN=true                         # ALWAYS start with true

# === Strategy Toggles ===
PM_ENABLE_ARBITRAGE=true
PM_ENABLE_LIQUIDITY=true
PM_ENABLE_COPY_TRADING=true
PM_ENABLE_SYNTH_EDGE=true
PM_ENABLE_DASHBOARD=true

# === Capital & Risk Limits ===
PM_STARTING_BALANCE_USD=500
PM_MAX_DRAWDOWN_USD=250                 # Hard stop â€” bot halts ALL trading
PM_MAX_TRADE_SIZE_USD=25                # 5% of capital per trade
PM_DAILY_VOLUME_CAP_USD=2000
PM_MAX_OPEN_POSITIONS=15
PM_MAX_PER_MARKET_USD=100               # 20% of capital per market
PM_MAX_PORTFOLIO_EXPOSURE_USD=400       # 80% capital (20% USDC reserve)

# === Arbitrage ===
PM_ARB_MIN_PROFIT_CENTS=0.5
PM_ARB_SCAN_INTERVAL_SEC=15

# === Liquidity Provision ===
PM_LP_TARGET_SPREAD_PCT=0.02
PM_LP_ORDER_SIZE_USD=65
PM_LP_REFRESH_INTERVAL_SEC=300
PM_LP_MAX_MARKETS=6
PM_LP_MIN_VOLUME_24H=5000
PM_LP_MIN_LIQUIDITY=1000
PM_LP_MAX_SPREAD=0.15
PM_LP_MIN_BEST_BID=0.02
PM_LP_MIN_DAILY_REWARD=10
PM_LP_MIN_ESTIMATED_REWARD=1.0
PM_LP_MAX_DAYS_TO_RESOLVE=180

# === LP Flip Strategy (Strategy 2 - Didi Flip) ===
PM_ENABLE_LP_FLIP=false
PM_LP_FLIP_ORDER_SIZE_USD=25
PM_LP_FLIP_POLL_INTERVAL_SEC=30
PM_LP_FLIP_SCAN_INTERVAL_SEC=60
PM_LP_FLIP_STOP_LOSS_PCT=0.25
PM_LP_FLIP_MAX_RESTING_SEC=3600

# === Copy Trading ===
PM_COPY_TRADERS=                        # Comma-separated addresses to mirror
PM_COPY_SCALE_FACTOR=0.1               # Copy 10% of their size
PM_COPY_POLL_INTERVAL_SEC=30
PM_COPY_MIN_TRADE_USD=10
PM_COPY_MAX_DELAY_SEC=5

# === Synth Edge ===
PM_SYNTH_EDGE_THRESHOLD=0.05           # 5% min edge to trade
PM_SYNTH_ASSETS=BTC,ETH
PM_SYNTH_POLL_INTERVAL_SEC=300
PM_SYNTH_KELLY_FRACTION=0.25           # Quarter-Kelly for safety

# === Anti-Detection ===
PM_TIMING_JITTER_PCT=0.15
PM_SIZE_JITTER_PCT=0.10

# === Telegram (optional) ===
# PM_TELEGRAM_BOT_TOKEN=123456:ABC-DEF
# PM_TELEGRAM_CHAT_ID=-100123456789

# === Database ===
PM_DB_PATH=bot_data.db

# === Logging ===
PM_LOG_LEVEL=INFO
